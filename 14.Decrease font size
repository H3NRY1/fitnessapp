def decrease_font_size(): 
    #Change font size for all windows
        global font_size
        if font_size > 8:  # Prevent font size from going too small
            font_size = 12
            Main_window.text_size = font_size
            Sign_window.text_size = font_size
            Login_window.text_size = font_size
            settings_window2.text_size = font_size
            info("Font Size", f"Font size set to {font_size}")
